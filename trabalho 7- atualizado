![image](https://github.com/serenaluz/serenaluz/assets/159147631/3707eb42-3c6f-46f1-9679-7b79073ec512)
def substituir_palavra(lista, palavra_antiga, palavra_nova):
    for i in range(len(lista)):
        if lista[i] == palavra_antiga:
            lista[i] = palavra_nova
    return lista
    palavras = ["banana", "morango", "limão"]
    nova_lista = substituir_palavra(palavras, "banana", "maçã")
    print("Lista alterada:", nova_lista)
