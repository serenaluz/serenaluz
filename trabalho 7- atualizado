def calcular_soma_e_media(lista):
    soma = sum(lista)
    media = soma / len(lista)
    return soma, media
if __name__ == "__main__":
        numeros = [1, 2, 3, 4]
    soma, media = calcular_soma_e_media(numeros)
    print("Soma:", soma)
    print("Média:", media)
